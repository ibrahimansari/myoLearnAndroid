<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ibrahim.ansari.LearnMotion.MainActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/ic_launcher"
        android:id="@+id/imageView"
        android:layout_above="@+id/pebble_button" />

    <Button
        android:id="@+id/myo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Myo"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size"
        android:padding="@dimen/text_padding"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/primary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/pebble_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Pebble"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size"
        android:padding="@dimen/text_padding"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/accent"
        android:layout_above="@+id/myo_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
